<SfDialog Header="Submit Candidate" Height="405px" IsModal="true" MinHeight="300px" Target="#divTarget" Width="480px" Visible="false" @ref="Dialog">
	<ChildContent>
		<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000" />
		<DialogPositionData X="center" Y="center" />
		<DialogAnimationSettings Duration="500" Effect="DialogEffect.FadeZoom" />
		<EditForm Model="ModelObject" OnValidSubmit="SubmitCandidateToRequisitionDialog">
			<DataAnnotationsValidator />
			<div class="divContainerTable">
				<TextBoxControl @bind-Value="@(ModelObject.Text)" @bind-Value:event="ValueChanged" ID="textNotes" MaxLength="1000" MinLength="5" Multiline="true" Rows="10" Placeholder="Submission Notes"
								ValidationMessage="@(() => ModelObject.Text)" />
			</div>
			<DialogFooter CancelMethod="CancelDialog"></DialogFooter>
		</EditForm>
	</ChildContent>
</SfDialog>